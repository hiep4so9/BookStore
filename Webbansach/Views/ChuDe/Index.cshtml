@model IEnumerable<Webbansach.Models.CHUDE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý chủ đề</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaCD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenChuDe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaCD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaCD }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaCD }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaCD })
        </td>
    </tr>
}

</table>
